<div class='bbluegrad fullheight new-session-page'>
  <div class='container'>
    <div class='hidden-xs paddingtop'%></div>
    <div class='col-lg-4 col-lg-offset-4 col-sm-8 col-sm-offset-2 paddingtop'>
      <% if params[:note]  %>
      <div class='well text-center'>
        <h3><%= params[:note] %></h3>
      </div>
      <% end %>

      <div class='panel panel-body animated flipInY'>
        <% unless @login_handler %>
          <%= render 'users/request_token' %>
        <% else %>
          <%= render 'sessions/confirm_token' %>
        <% end %>
      </div>

      <% unless @login_handler %>
          <%= render 'shared/why_phone_email_modal' %>
      <% end %>

    </div>
  </div>
</div>
