<header id="header" class="header-section">
    <div class="top-header">
      <div class="container">
          <div class="top-content-wrap row">
              <div class="col-sm-8">
                  <ul class="left-info">
                      <li><a href="#"><i class="ti-email"></i>info@redeemy.net</a></li>
                      <li><a href="#"><i class="ti-mobile"></i>+(57) 305 7529335</a></li>
                  </ul>
              </div>
              <div class="col-sm-4 d-none d-md-block">
                  <ul class="right-info">
                      <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                      <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                  </ul>
              </div>
          </div>
      </div>
    </div>
    <div class="bottom-header">
      <div class="container">
          <div class="bottom-content-wrap row">
              <div class="col-sm-4">
                  <div class="site-branding">
                      <a href="/"><%= image_tag('redeemy-logo.png', width: "150")%></a>
                  </div>
              </div>
             <div class="col-sm-8 text-right">
               <ul id="mainmenu" class="nav navbar-nav nav-menu">
                    <li class="active"> <a href="/">Inicio</a></li>
                    <li><a href="/organizations">Para organizaciones</a></li>
                    <li><a href="<%= projects_path %>">Proyectos</a></li>
                    <li><a href="<%= about_path %>">Nosotros</a></li>
                    <% if session[:current_role] %>
                    <li><a href="<%= sign_out_user_path %>">Logout</a>
                      <ul>
                        <li><p><%= "Logged as: " + session[:current_role] %></p></li>
                        <% if session[:current_role] == "Admin" %>
                          <li><%= link_to "Dashboard", admin_dashboard_index_path(session[:user_id]) %></li>
                        <% end %>
                        <% if session[:current_role] == "OrgAdmin" %>
                          <li><%= link_to "Dashboard", org_admin_dashboard_index_path(session[:user_id]) %></li>
                        <% end %>
                        <% if session[:current_role] == "Customer" %>
                          <li><%= link_to "Dashboard", customer_dashboard_index_path(session[:user_id]) %></li>
                        <% end %>
                      </ul>
                    </li>
                    <% else %>
                    <li><a href="<%= sign_in_user_path %>">Reg√≠strate / Ingresa</a></li>
                    <% end %>
                </ul>
                <a href="<%= projects_path %>" class="default-btn">Donar / Redimir</a>
